{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User list</h1>

<div class="table-responsive">
    <table class="table">
        <thead>
        <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Company</th>
                <th>Usertitle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.company }}</td>
                <td>{{ entity.userTitle }}</td>
                <td>
                    <a  class="btn btn-sm btn-info" href="{{ path('user_show', { 'id': entity.id }) }}">show</a>
                    <a class="btn btn-sm btn-success" href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <div id="featured" class="right">
        <a href="{{ path('user_new') }}" class="btn btn-primary"> Create a new Category </a>
    </div>
    {% endblock %}


