{% extends '::base.html.twig' %}

{% block body -%}
    <h1>SubIndustry list</h1>

    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Industry</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
    <tr>
        <td><a href="{{ path('subindustry_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        <td>{{ entity.name }}</td>
        <td>{{ entity.industry }}</td>
        <td>
            <a  class="btn btn-sm btn-info" href="{{ path('subindustry_show', { 'id': entity.id }) }}">show</a>
            <a class="btn btn-sm btn-success" href="{{ path('subindustry_edit', { 'id': entity.id }) }}">edit</a>
        </td>
    </tr>
{% endfor %}
            </tbody>
        </table>
    </div>
    <div id="featured" class="right">
        <a href="{{ path('subindustry_new') }}" class="btn btn-primary"> Create a new Category </a>
    </div>

    {% endblock %}
