{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Industry</h1>

<div class="table-responsive">
    <table class="table">
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
        </tbody>
    </table>

</div>
<div id="featured" class="left">
        <a href="{{ path('industry') }}" class="btn btn-default"><span class="fa fa-reply"></span> Back to the list</a>
        <a href="{{ path('industry_edit', { 'id': entity.id }) }}" class="btn btn-info"><span class="fa fa-edit"></span> Edit</a>
        {{ form_start(delete_form) }}
        {{ form_widget(delete_form.submit, {'attr': {'class': 'btn-danger'}}) }}
        {{ form_end(delete_form) }}
</div>
{% endblock %}

